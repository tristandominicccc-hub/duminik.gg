-- Copy Link Function (Mobile Friendly)
local function copyToClipboard(text)
    if setclipboard then
        setclipboard(text)
    elseif toclipboard then
        toclipboard(text)
    end
end

GetLinkBtn.MouseButton1Click:Connect(function()
    copyToClipboard(KeyLink)
    KeyStatus.Text = "‚úî Link copied!"
end)

