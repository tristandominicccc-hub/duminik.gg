-- Create SELL Tab
local SellTab = Window:CreateTab("Sell", 4483362458)
local SellSection = SellTab:CreateSection("Sell Items")

-- Add Sell All button to Sell tab
local SellAllButton = SellTab:CreateButton({
   Name = "Sell All",
   Callback = function()
      local args = {"SellAll"}
      game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("sellEvent"):FireServer(unpack(args))
   end,
})

-- Create AUTO UPGRADE Tab
local AutoUpgradeTab = Window:CreateTab("Auto Upgrade", 4483362458)
